<div class="container">
  <div class="d-flex flex-row justify-content-between">
    <h1>Index</h1>
    <%= link_to "Create New List", new_list_path, class: "btn btn-primary my-auto" %>
  </div>
  <div class="d-flex flex-row justify-content-between row-cols-3 gap-3">
    <% @lists.each do |list| %>
      <div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= link_to list.name, list_path(list)%>
      </div>
    <% end %>
  </div>
</div>
